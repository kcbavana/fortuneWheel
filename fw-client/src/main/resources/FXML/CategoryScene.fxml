<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Text?>
<?import java.lang.*?>

<BorderPane fx:controller="CategoryScene" xmlns:fx="http://javafx.com/fxml" id = "bPane">
	<top>
		<Text fx:id="title" text = "Chose a category"/>
	</top>
	<center>
		<HBox fx:id="categoryBox" spacing="50">
			<VBox fx:id="animalBox" spacing="20" >
				<Button fx:id="animalsButton" text = "animals" onAction = "#animalsMethod"/>
				<Text fx:id="animalsText" text = "Animals" />
				<Text fx:id="animalsWin" text = "Wins: " />
				<Text fx:id="animalsLoses" text = "Losses: " />
			</VBox>
			<VBox fx:id="placesBox" spacing="20" >
				<Button fx:id="placesButton" text = "places" onAction = "#placesMethod"/>
				<Text fx:id="moviesText" text = "Places" />
				<Text fx:id="moviesWin" text = "Wins: " />
				<Text fx:id="moviesLoses" text = "Losses: " />
			</VBox>
			<VBox fx:id="moviesBox" spacing="20">
				<Button fx:id="moviesButton" text = "movies" onAction = "#moviesMethod"/>
				<Text fx:id="placesText" text = "Movies" />
				<Text fx:id="placesWin" text = "Wins: " />
				<Text fx:id="placesLoses" text = "Losses: "/>
			</VBox>
		</HBox>
	</center>
	<bottom>
		<HBox fx:id="menuBox" spacing="70">
			<Button fx:id="backButton" text="Back" onAction = "#backMethod"/>
			<Button fx:id="exitButton" text="Exit" onAction = "#exitMethod"/>
		</HBox>
	
	</bottom>
</BorderPane>