<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Text?>
<?import java.lang.*?>

<BorderPane fx:controller="CategoryScene" xmlns:fx="http://javafx.com/fxml" id = "bPane">
	<top>
		<Text fx:id="title" text = "Chose a category"/>
	</top>
	<center>
		<HBox fx:id="categoryBox" spacing="10">
			<VBox fx:id="animalBox" spacing="20">
				<Button fx:id="animalsButton"/>
				<Text fx:id="animalsText" text = "
					Animals
					Wins: X
					Losses: X" />
			</VBox>
			<VBox fx:id="placesBox" spacing="20">
				<Button fx:id="placesButton"/>
				<Text fx:id="placesText" text = "
					Places
					Wins: X
					Losses: X" />
			</VBox>
			<VBox fx:id="moviesBox" spacing="20">
				<Button fx:id="moviesButton"/>
				<Text fx:id="moviesText" text = "
					Movies
					Wins:
					Losses: " />
			</VBox>
		</HBox>
	</center>
	<bottom>
		<HBox fx:id="menuBox" spacing="70">
			<Button fx:id="backButton" text="Back"/>
			<Button fx:id="exitButton" text="Exit"/>
		</HBox>
	
	</bottom>
</BorderPane>