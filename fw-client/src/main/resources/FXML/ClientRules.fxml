<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Text?>
<?import java.lang.*?>

<BorderPane fx:controller="ClientRules" xmlns:fx="http://javafx.com/fxml" id = "bPane">
	<top>
		<Text fx:id="title" text = "Rules"/>
	</top>
	<center>
		<VBox fx:id="rulesBox" spacing = "10">
			<Text fx:id="rulesText" text ="1. Press Start and begin the same" />
			<Text fx:id="rulesText" text ="2. Choose a category in the category scene" />
			<Text fx:id="rulesText" text ="3. Start the game by guessing the characters" />
			<Text fx:id="rulesText" text ="4. Keep track of how many guesses left in bottom of the screen" />
			<Text fx:id="rulesText" text ="5. To Win, guess one word from each category" />
			<Text fx:id="rulesText" text ="6. You lose the game if you fail to guess 3 words in one category" />
			<Text fx:id="rulesText" text ="7. Press Main to begin the game again" />
		</VBox>
	</center>
	<bottom>
		<HBox fx:id="menuBox" spacing="70">
			<Button fx:id="backButton" text="Back" onAction = "#backMethod" />
			<Button fx:id="exitButton" text="Exit" onAction = "#exitMethod" />
		</HBox>
	</bottom>


</BorderPane>